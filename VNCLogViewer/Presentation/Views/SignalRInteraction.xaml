    <dxlc:LayoutControl
        Orientation="Horizontal" >

        <dxlc:LayoutGroup x:Name="lgSignInPanel"
                          Orientation="Vertical"
                          HorizontalAlignment="Left"
                          Margin="2">

            <dxlc:LayoutItem Label="ServerURI:"
                             HorizontalAlignment="Left">
                <TextBox x:Name="ServerURI"
                         Width="200"
                    Text="{Binding ServerURI}" />
            </dxlc:LayoutItem>

            <dxlc:LayoutGroup>

                <dxlc:LayoutItem Label="User name:"
                                 HorizontalAlignment="Left">
                    <TextBox x:Name="UserNameTextBox"
                        Text="{Binding UserName}"
                        MinWidth="100" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem HorizontalAlignment="Left">
                    <Button x:Name="btnSignIn"
                        Width="75"
                        HorizontalAlignment="Right"
                        Click="btnSignIn_Click"
                        Content="Sign In" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem HorizontalAlignment="Left">
                    <Button x:Name="btnSignOut"
                        Width="75"
                        HorizontalAlignment="Right"
                        Click="btnSignOut_Click"
                        Content="Sign Out" />
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>
            
        </dxlc:LayoutGroup>

        <dxlc:LayoutGroup x:Name="lgChatPanel" 
                          Orientation="Vertical"
                          Margin="2">

            <dxlc:LayoutGroup Orientation="Horizontal">

                <dxlc:LayoutItem
                        Label="Message:"
                        LabelPosition="Top"
                        HorizontalAlignment="Left">
                    <TextBox x:Name="tbMessage"
                            Text="{Binding Message}"
                            Width="300"
                            TextWrapping="Wrap" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem
                        Label="Priority:"
                        LabelPosition="Top"
                         HorizontalAlignment="Left">
                    <TextBox x:Name="tbMessagePriority"
                            Text="{Binding Priority}"
                            Width="100" />
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Horizontal">

                <Button x:Name="btnSend"
                        Width="75"
                        Click="btnSend_Click"
                        Content="Send"
                        IsDefault="True"
                        IsEnabled="False" />

                <Button x:Name="btnSendPriority"
                        HorizontalAlignment="Left"
                        Click="btnSendPriority_Click"
                        Content="Send Priority"
                        IsEnabled="False" />
            </dxlc:LayoutGroup>
            
        </dxlc:LayoutGroup>
        
    </dxlc:LayoutControl>
</vncmvvm:ViewBase>